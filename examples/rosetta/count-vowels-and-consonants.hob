// @test: countVC("The quick brown fox jumps over the lazy dog")
vowels = "aeiouAEIOU"
consonants = "bcdfghjklmnpqrstvwxyzBCDFGHJKLMNPQRSTVWXYZ"

isInStr :: (char * [char] * int) -> bool
isInStr x = match x with
  | (c, s, i) -> if (i >= length(s)) then false else if (s[i] == c) then true else isInStr((c, s, i + 1))

countVC s = (length([c | c <- s, isInStr((c, vowels, 0))]), length([c | c <- s, isInStr((c, consonants, 0))]))
